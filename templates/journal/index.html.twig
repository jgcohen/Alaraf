{% extends 'base.html.twig' %}

{% block title %}Hello Journal{% endblock %}

{% block content %}

<h1 class="mt-5 pt-2">Alaraf Journal</h1>
{% for post in posts %}
<div class="card my-3">
  <div class="card-header">
    {{post.title}}    <p>{{post.getCreatedAt()|date('d/m/Y')}}</p>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>{{post.content}}</p>
     
    </blockquote>
  </div>
</div>
					{% endfor %}
                   
{% endblock %}

